.header

    &__main
        box-shadow: 0 1px #283345
        background: linear-gradient(to bottom, #7a9dd6, #617eab)

    &__main-wrapper
        width: 960px
        margin: 0 auto
        padding: 10px 0 9px
        overflow: hidden

    &__right-wrapper
        display: inline-block
        float: right
        color: #fff
        font-family: Arial, sans-serif

    &__phone-number
        font-size: 16px

    &__operation-time
        font-size: 11px
        font-style: italic
        margin-top: 10px
