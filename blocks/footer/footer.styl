.footer
    margin-top: 80px
    background-color: #617eab
    font-family: Arial, sans-serif
    color: #fff
    font-size: 12px
    padding: 20px 0

    &__wrapper
        width: 960px
        margin: 0 auto
        display: flex

    &__title
        font-size: 14px
        margin-bottom: 10px

    &__section
        width: 25%

    .link
        display: block
        color: inherit
        margin-bottom: 10px
        text-decoration: none

        &:hover
            text-decoration: underline
