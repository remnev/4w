.main-menu
    margin-left: 80px
    display: inline-block
    font-family: Arial, sans-serif
    font-size: 16px
    letter-spacing: .02em
    line-height: 40px

    .link
        color: #e1e7f0
        text-decoration: none
        margin-right: 40px
        position: relative
        display: inline-block

        &:hover
            color: #fff

        &_active
            color: #fff
            border-bottom: 1px solid
