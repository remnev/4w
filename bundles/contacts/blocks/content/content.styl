.content
    width: 960px
    margin: 40px auto 0

    &__header
        font-family: 'Helvetica Neue', Arial, sans-serif
        font-size: 24px
        line-height: 24px
        letter-spacing: .02em
        margin: 0

    &__description
        margin-top: 20px
        font-family: Arial, sans-serif
        font-size: 14px
        line-height: 20px

    &__map
        margin-top: 20px

    &__panorama
        margin-top: 20px

    &__print-map
        margin-top: 20px
        display: inline-block

        @media print
            display: none
