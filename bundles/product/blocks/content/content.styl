.content
    margin: 40px auto 0
    width: 960px

    &__left-column
        width: 230px
        display: inline-block
        vertical-align: top

    &__right-column
        width: 720px
        display: inline-block
        vertical-align: top
        margin-left: 10px

    &__header
        font-family: 'Helvetica Neue', Arial, sans-serif
        font-size: 24px
        line-height: 24px
        letter-spacing: .02em
        margin: 0

    &__description
        font-family: Arial, sans-serif
        font-size: 14px
        line-height: 18px
        margin-top: 20px

    &__about-product
        font-family: Arial, sans-serif
        font-size: 14px
        margin-top: 40px

    &__about-product h2
        font-family: 'Helvetica Neue', sans-serif
        font-size: 18px

    &__about-product h3
        font-family: 'Helvetica Neue', sans-serif
        font-size: 14px
