.color-picker

    &__header
        font-family: Arial, sans-serif
        font-size: 16px
        letter-spacing: .02em
        position: relative
        margin-left: 20px

        &:before
            position: absolute
            content: counter(list)
            counter-increment: list
            width: 20px
            height: 20px
            border: 2px solid #6481b0
            left: -30px
            top: -3px
            border-radius: 50%
            text-align: center
            line-height: 20px
            font-size: 14px

    &_picked .color-picker__header:before
        background-color: #6481b0
        color: #fff
        font-weight: bold

    &__title
        font-family: Arial, sans-serif
        font-size: 14px
        margin-top: 20px

        &_invisible
            display: none

    &__colors
        margin-top: 8px

    &__color
        overflow: hidden
        display: inline-block
        margin-bottom: -6px
        position: relative
        cursor: pointer

        &_active
            box-shadow: 0 1px 1px 0 #000

            &:after
                content: ''
                position: absolute
                top: 0
                left: 0
                bottom: 0
                right: 0
                border: 3px solid #fa0a0a

        &_inactive
            opacity: .6

        .image
            width: 100%

        &_size
            &_l
                width: 144px
                height: 80px

            &_s
                width: 60px
                height: 32px

        &_no-laminate
            width: 142px
            height: 78px
            border: 1px solid #e5e5e5

            &.color-picker__color_active
                border-color: #fa0a0a

            .color-picker__colorCode
                display: none

    &__colorCode
        background-color: rgba(255, 255, 255, .8)
        font-family: Arial, sans-serif
        font-size: 8px
        left: 5px
        line-height: 12px
        padding: 1px 4px
        position: absolute
        top: 5px

    &__pickedColor
        display: inline
        font-weight: bold
