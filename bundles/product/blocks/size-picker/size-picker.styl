.size-picker
    margin-top: 40px

    &__header
        font-family: Arial, sans-serif
        font-size: 16px
        letter-spacing: .02em
        position: relative
        margin-left: 20px

        &::before
            position: absolute
            content: counter(list)
            counter-increment: list
            width: 20px
            height: 20px
            border: 2px solid #6481b0
            left: -30px
            top: -3px
            border-radius: 50%
            text-align: center
            line-height: 20px
            font-size: 14px

            .size-picker_picked &
                background-color: #6481b0
                color: #fff
                font-weight: bold

    &__pickedSize
        display: inline
        font-weight: bold

    .radio-group
        margin-top: 20px
